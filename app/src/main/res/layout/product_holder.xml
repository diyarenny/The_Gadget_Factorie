<?xml version="1.0" encoding="UTF-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="100dp">


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewCart"
            android:layout_width="107dp"
            android:layout_height="109dp"
            android:baselineAlignBottom="true"
            android:paddingLeft="12dp"
            app:srcCompat="@android:drawable/divider_horizontal_dark"></ImageView>


        <LinearLayout
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleViewCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:text="sample"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/manuViewCart"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="sample" />

            <TextView
                android:id="@+id/categoryView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="sample" />

            <TextView
                android:id="@+id/priceViewCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="sample" />

            <TextView
                android:id="@+id/stockView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="sample" />

            <Button
                android:id="@+id/addToCart"
                android:layout_width="126dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@color/common_google_signin_btn_text_dark_focused"
                android:padding="5dp"
                android:paddingLeft="100dp"
                android:paddingTop="20dp"
                android:paddingRight="50dp"
                android:text="Add to cart"
                android:textColor="@color/whiteTransparentHalf"
                app:backgroundTint="@color/cardview_dark_background" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>