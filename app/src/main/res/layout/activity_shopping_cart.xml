<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout tools:context=".ShoppingCart" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/totalValue"
        android:layout_width="137dp"
        android:layout_height="35dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="52dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/promoCode"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/shoppingCart"
        android:layout_width="209dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Shopping Cart"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="383dp"
        android:layout_height="290dp"
        android:layout_margin="5dp"
        android:layout_marginTop="4dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/total_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoppingCart"
        app:layout_constraintVertical_bias="1.0" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintBottom_toTopOf="@+id/promoCode" android:text="Total:" android:layout_marginBottom="60dp" android:id="@+id/total_textView" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.128" app:layout_constraintEnd_toStartOf="@+id/totalValue"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintEnd_toEndOf="@+id/promoCode" android:textColor="@color/black" android:text="Apply" android:id="@+id/apply" app:layout_constraintTop_toTopOf="@+id/promoCode" app:layout_constraintStart_toStartOf="@+id/promoCode" app:layout_constraintHorizontal_bias="0.949" app:layout_constraintVertical_bias="0.0" app:layout_constraintBottom_toBottomOf="@+id/promoCode" app:backgroundTint="@color/whiteTransparentHalf"/>

    <Button android:layout_height="57dp" android:layout_width="327dp" app:layout_constraintEnd_toEndOf="parent" android:text="Proceed" android:layout_marginBottom="20dp" android:id="@+id/proceed" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.487" app:layout_constraintBottom_toBottomOf="parent" app:backgroundTint="@color/colorAccent"/>

    <EditText android:layout_height="61dp" android:layout_width="324dp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/clearPromoCode" android:id="@+id/promoCode" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.505" android:inputType="textPersonName" android:hint="Promo code" android:ems="10"/>

    <Button android:layout_height="46dp" android:layout_width="322dp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/proceed" android:textColor="@color/black" android:text="clear promo code" android:layout_marginBottom="8dp" android:id="@+id/clearPromoCode" app:layout_constraintStart_toStartOf="parent" app:backgroundTint="@color/whiteTransparentHalf"/>

</androidx.constraintlayout.widget.ConstraintLayout>